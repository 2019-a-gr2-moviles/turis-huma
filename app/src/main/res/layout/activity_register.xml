<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="#166577">

    <TextView
            android:text="Formulario de Registro"
            android:layout_width="276dp"
            android:layout_height="45dp" android:id="@+id/registerTitle" android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp" android:layout_alignParentStart="true" android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:textAlignment="center" android:fontFamily="@font/muli_light"
            android:textSize="20sp" android:textColor="#FFEB3B" android:layout_below="@+id/logo_register"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_alignParentEnd="true" android:layout_marginEnd="24dp"
            android:layout_alignParentStart="true" android:layout_marginStart="33dp" android:layout_marginTop="44dp"
            android:layout_below="@+id/registerTitle" android:textSize="18sp" android:fontFamily="@font/muli_light"
            android:background="@drawable/inputs"
            android:hint="  Nombre de Usuario" android:textAlignment="textStart"
            android:drawableLeft="@drawable/user_icon25"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtEmail" android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/txtNombre"
            android:layout_marginStart="1dp" android:layout_alignStart="@+id/txtNombre"
            android:layout_marginTop="29dp" android:layout_below="@+id/txtNombre" android:background="@drawable/inputs"
            android:hint="   E-Mail"
            android:drawableLeft="@drawable/mail_icon25"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/txtEmail"
            android:layout_marginStart="-2dp" android:layout_alignStart="@+id/txtEmail"
            android:layout_marginTop="31dp" android:layout_below="@+id/txtEmail" android:background="@drawable/inputs"
            android:hint="  Contraseña" android:drawableLeft="@drawable/password_icon25"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPasswordConfirm" android:layout_marginTop="32dp" android:layout_below="@+id/txtPassword"
            android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/txtPassword" android:layout_marginStart="-2dp"
            android:layout_alignStart="@+id/txtPassword" android:background="@drawable/inputs"
            android:fontFamily="@font/muli_light" android:hint="  Confirmar Contraseña"
            android:drawableLeft="@drawable/password_icon25"/>
    <ImageView
            android:layout_width="196dp"
            android:layout_height="193dp" app:srcCompat="@drawable/logo" android:id="@+id/logo_register"
            android:layout_alignParentEnd="true" android:layout_marginEnd="104dp" android:layout_alignParentStart="true"
            android:layout_marginStart="110dp" android:layout_marginTop="5dp" android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtCountry" android:layout_marginTop="27dp"
            android:layout_below="@+id/txtPasswordConfirm" android:layout_marginEnd="-1dp"
            android:layout_alignEnd="@+id/txtPasswordConfirm" android:layout_marginStart="-3dp"
            android:layout_alignStart="@+id/txtPasswordConfirm" android:fontFamily="@font/muli_light"
            android:background="@drawable/inputs" android:hint="  País de Residencia"
            android:drawableLeft="@drawable/country_icon25"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="60dp" app:srcCompat="@drawable/next_icon" android:id="@+id/register_next_button"
            android:layout_alignParentEnd="true" android:layout_marginEnd="100dp" android:layout_marginTop="31dp"
            android:layout_below="@+id/txtCountry" android:background="@android:color/transparent"/>
    <ImageButton
            android:layout_width="73dp"
            android:layout_height="62dp" app:srcCompat="@drawable/back_icon" android:id="@+id/register_back_button"
            android:layout_alignParentStart="true" android:layout_marginStart="100dp" android:layout_marginTop="30dp"
            android:layout_below="@+id/txtCountry" android:background="@android:color/transparent"/>

</RelativeLayout>