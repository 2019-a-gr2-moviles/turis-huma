<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="#28536B">

    <TextView
            android:text="Formulario de Registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerTitle" android:layout_alignParentEnd="true"
            android:layout_marginEnd="104dp" android:layout_alignParentStart="true" android:layout_marginStart="109dp"
            android:layout_marginTop="36dp"
            android:textAlignment="center" android:fontFamily="@font/muli_light"
            android:textSize="18sp" android:textColor="#FFEB3B" android:layout_below="@+id/imageView"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
            android:layout_alignParentStart="true" android:layout_marginStart="38dp" android:layout_marginTop="48dp"
            android:layout_below="@+id/registerTitle" android:textSize="14sp" android:fontFamily="@font/muli_light"
            android:background="@drawable/inputs"
            android:hint="Nombre de Usuario" android:textAlignment="center" android:drawableLeft="@drawable/mail-icon"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail" android:layout_marginTop="29dp" android:layout_below="@+id/txtNombre"
            android:layout_marginEnd="1dp" android:layout_alignEnd="@+id/txtNombre" android:layout_marginStart="3dp"
            android:layout_alignStart="@+id/txtNombre" android:fontFamily="@font/muli_light"
            android:background="@drawable/inputs" android:hint="E-Mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_marginEnd="3dp" android:layout_alignEnd="@+id/txtEmail"
            android:layout_marginStart="1dp" android:layout_alignStart="@+id/txtEmail"
            android:layout_marginTop="29dp" android:layout_below="@+id/txtEmail" android:background="@drawable/inputs"
            android:hint="Contraseña"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPasswordConfirm" android:layout_marginTop="32dp" android:layout_below="@+id/txtPassword"
            android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/txtPassword" android:layout_marginStart="-2dp"
            android:layout_alignStart="@+id/txtPassword" android:background="@drawable/inputs"
            android:fontFamily="@font/muli_light" android:hint="Confirmar Contraseña"/>
    <ImageView
            android:layout_width="196dp"
            android:layout_height="193dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            android:layout_alignParentEnd="true" android:layout_marginEnd="104dp" android:layout_alignParentStart="true"
            android:layout_marginStart="110dp" android:layout_marginTop="5dp" android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/txtCountry" android:layout_marginTop="26dp"
            android:layout_below="@+id/txtPasswordConfirm" android:layout_marginEnd="7dp"
            android:layout_alignEnd="@+id/txtPasswordConfirm" android:layout_marginStart="1dp"
            android:layout_alignStart="@+id/txtPasswordConfirm" android:fontFamily="@font/muli_light"
            android:background="@drawable/inputs" android:hint="País de Residencia"/>
    <ImageButton
            android:layout_width="89dp"
            android:layout_height="77dp" android:id="@+id/btnBack"
            android:layout_marginEnd="37dp" android:layout_marginTop="25dp"
            android:layout_below="@+id/txtCountry" android:background="#00FFFFFF" tools:srcCompat="@drawable/ic_back"
            android:layout_toStartOf="@+id/btnNext2" android:layout_alignParentStart="true"
            android:layout_marginStart="101dp"/>
    <ImageButton
            android:layout_width="95dp"
            android:layout_height="75dp" app:srcCompat="@drawable/right-icon" android:id="@+id/btnNext2"
            android:layout_alignParentEnd="true" android:layout_marginEnd="90dp" android:layout_marginTop="25dp"
            android:layout_below="@+id/txtCountry" android:background="#00FFFFFF" tools:srcCompat="@drawable/ic_next"/>
</RelativeLayout>