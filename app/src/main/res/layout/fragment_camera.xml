<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".CameraFragment">

    <com.wonderkiln.camerakit.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    ></com.wonderkiln.camerakit.CameraView>

    <com.example.dr.turis_huma.Helper.GraphicOverlay
            android:id="@+id/graphic_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <Button
            android:id="@+id/btn_detect"
            android:text="@string/detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="100dp"
            android:layout_alignBottom="@+id/graphic_overlay"
            android:background="@color/colorPrimary" android:layout_alignTop="@+id/graphic_overlay"
            android:layout_marginTop="523dp"/>

</RelativeLayout>